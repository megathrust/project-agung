<main class="content">
  <!-- Heading -->
  <form class="dropzone-box">
    <h2>Upload File</h2>
    <p>Klik untuk upload atau tarik dan lepas</p>
    <div class="dropzone-area">
      <div class="file-upload-icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="68"
          height="68"
          fill="#1b1819"
          viewBox="0 0 256 256"
        >
          <path
            d="M188.24,164.24a6,6,0,0,1-8.48,0L158,142.49V208a6,6,0,0,1-12,0V142.49l-21.76,21.75a6,6,0,0,1-8.48-8.48l32-32a6,6,0,0,1,8.48,0l32,32A6,6,0,0,1,188.24,164.24ZM160,42A86.1,86.1,0,0,0,82.43,90.88,62,62,0,1,0,72,214h40a6,6,0,0,0,0-12H72a50,50,0,0,1,0-100,50.68,50.68,0,0,1,5.91.36A85.54,85.54,0,0,0,74,128a6,6,0,0,0,12,0,74,74,0,1,1,103.6,67.85,6,6,0,0,0,4.8,11A86,86,0,0,0,160,42Z"
          ></path>
        </svg>
      </div>
      <input
        type="file"
        required
        id="upload-file"
        name="uploaded-file"
        accept="image/"
      />
      <p class="file-info">File tidak ada</p>
    </div>
    <div class="dropzone-description">
      <span>Maksimal ukuran file: 20MB</span>
    </div>
    <div class="dropzone-actions">
      <div class="dropzone-help">Help Center</div>
      <div>
        <button type="reset">Cancel</button>
        <button id="submit-button" type="submit">Simpan</button>
      </div>
    </div>
  </form>
</main>

